{
  "name": "villen-music",
  "version": "1.0.0",
  "description": "VILLEN Personal Music Player",
  "homepage": "https://github.com/rahulkumar-andc/villen-music",
  "repository": "https://github.com/rahulkumar-andc/villen-music",
  "main": "main.js",
  "author": {
    "name": "Villen",
    "email": "villen@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --win --mac"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^23.0.6"
  },
  "build": {
    "appId": "com.villen.music",
    "productName": "VillenMusic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.bin",
      "!**/*.{md,map}"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Audio",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.music"
    }
  }
}