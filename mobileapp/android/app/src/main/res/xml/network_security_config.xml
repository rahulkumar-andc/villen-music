<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    <!-- Allow Render backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">villen-music.onrender.com</domain>
        <domain includeSubdomains="true">onrender.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    <!-- Allow Saavn CDN for audio streaming -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">saavncdn.com</domain>
        <domain includeSubdomains="true">aac.saavncdn.com</domain>
        <domain includeSubdomains="true">c.saavncdn.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
